{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "exclude": [
    "src/plugins/**.ts",
    "/plugins/**.ts",
  ],
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.vue",
  ]
}
